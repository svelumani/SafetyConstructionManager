# Production environment for server
NODE_ENV=production
PORT=5000

# Database Configuration - Use the correct hostname that matches the SSL certificate
DATABASE_URL=postgres://your_username:your_password@mysafetyapp.venpep.net:5432/your_database_name

# Alternative if you need to specify SSL mode explicitly:
# DATABASE_URL=postgres://your_username:your_password@mysafetyapp.venpep.net:5432/your_database_name?sslmode=require

# Application Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
IS_DOCKER=false

# Email Configuration (Optional)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@emailauth.quiksend.in
SMTP_PASS=your_smtp_password
SMTP_FROM=MySafety <noreply@mysafetydemo.venpep.net>

# Upload Configuration
UPLOAD_PATH=./uploads 